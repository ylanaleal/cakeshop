<% if current_user %>
  <h3>Meus pedidos</h3>
  <% @orders.each do |order| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title text-center">Pedido: <%= order.id %></h5>
        <p class="card-text text-center">Total: <%= order.formatted_total %></p>
        <p class="card-text text-center">Produtos: <%= order.order_items %></p>
      </div>
    </div>
  <% end %>
  <h3>Meus endereços</h3>
  <% @addresses.each do |address| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title text-center">Endereço: <%= address.id %></h5>
        <p class="card-text text-center"><%= address.full_address %></p>
      </div>
    </div>
  <% end %>
<% end %>
