<% if current_user.admin == true %>
<div class="d-flex">
  <div class="w-50">
    <%= link_to 'Criar novo produto personalizável', new_event_product_path %>
    <h3>Produtos personalizáveis</h3>
    <% @event_products.each do |event_product| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title text-center"><%= event_product.name %></h5>
          <p class="card-text text-center"><%= event_product.event_product_type %></p>
          <div class="d-flex justify-content-center">
            <%= link_to 'Editar', edit_event_product_path(event_product), class: "btn btn-dark shadow-sm rounded-3" %>
            <%= link_to 'Deletar', event_product_path(event_product), data: { turbo_method: :delete, turbo_confirm: "Você tem certeza?" }, class: "btn btn-dark shadow-sm rounded-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="w-50">
    <%= link_to 'Criar novo produto', new_product_path %>
    <h3>Produtos padrão</h3>
    <% @products.each do |product| %>
      <div class="card  mb-3">
        <div class="card-body">
          <h5 class="card-title text-center"><%= product.name %></h5>
          <p class="card-text text-center"><%= product.description %></p>
          <p class="card-text text-center"><%= product.formatted_price %></p>
          <div class="d-flex justify-content-center">
            <%= link_to 'Editar', edit_product_path(product), class: "btn btn-dark shadow-sm rounded-3" %>
            <%= link_to 'Deletar', product_path(product), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Você tem certeza?" }, class: "btn btn-dark shadow-sm rounded-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% else %>
  <% @orders.each do |order| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title text-center">Pedido: <%= order.id %></h5>
        <p class="card-text text-center">Total: <%= order.formatted_total %></p>
        <p class="card-text text-center">Produtos: <%= order.order_items %></p>
      </div>
    </div>
  <% end %>
<% end %>
